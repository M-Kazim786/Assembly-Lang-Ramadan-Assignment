;Input a capital letter (from B to Z) and then show its
; previous alphabet.


.model small
.stack 100h
.data  
      msg1 db 'Enter an alphabet:$'
      msg2 db 'The next alphabet is',':$'
      msg3 db  'Invalid$'  
      newline db 10,13,'$'
.code
main proc
    mov ax,@data
    mov ds,ax  
    
    lea dx,msg1
    mov ah,9
    int 21h
    
    mov ah,1
    int 21h
    
    mov dl,al   
    
    cmp dl,'A'
    je invalid 
    
    cmp dl,'B'
    je invalid
    
    cmp dl,'Z'
    je invalid  
    
        
    dec dl
            
    mov ah,2
    int 21h  

    jmp exit
    
    
    invalid:
    lea dx,msg3       
    mov ah,9
    int 21h  
    
    exit:
    mov ah,4ch
    int 21h
    
main endp
end main
